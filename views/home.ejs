    <style>
      /* Custom CSS */
      .box-container {
        border: 1px solid #ccc;
        padding: 15px;
        display: flex;
        align-items: center;
      }
      .box-icon {
        font-size: 24px;
        margin-right: 10px;
      }
      .box-content {
        flex-grow: 1;
      }
      h3,span{
        position: relative;
        left: 10px;
      }
      /* Responsive Styles */
      @media (max-width: 576px) {
        .box-container {
          flex-direction: column;
        }
        .box-icon {
          margin-right: 0;
          margin-bottom: 10px;
        }
      }
    </style>
</head>
